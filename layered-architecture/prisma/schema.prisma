generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id           String   @id @default(uuid())
  title        String
  is_available Boolean
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}
